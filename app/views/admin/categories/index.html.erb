<div class="container">

  <h1>餐廳分類總表</h1>
  <div>
  <%= link_to '餐廳', admin_restaurants_path %>  |
  <%= link_to '料理分類', admin_categories_path %>
  </div>
  <br>
  <div class="form-inline" >
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
    <% if @category.errors.any? %>
    <%= @category.errors.full_messages.to_sentence %>
    <% end %>
  <% end %>
  </div>

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>料理分類</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td>
              <%= link_to '編輯', admin_categories_path(id: category.id) %>｜
              <%= link_to '刪除', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>