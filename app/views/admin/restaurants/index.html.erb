<div class="container">

  <h1>餐廳後台</h1>
  <div>
  <%= link_to '餐廳', admin_restaurants_path %> |
  <%= link_to '料理類別', admin_categories_path %>
  </div>

  <div class="row">

    <div class="col-md-12">

      <div>
        <%= link_to '新增餐廳資訊', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category</th>
            <th>Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td>[<%= restaurant.category.name %>]</td>
            <td><%= restaurant.name %></td>
            <td>
              <%= link_to '顯示', admin_restaurant_path(restaurant) %>
              <%= link_to '更新', edit_admin_restaurant_path(restaurant) %>
              <%= link_to '刪除', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "你確定嗎?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>

  </div>
</div>